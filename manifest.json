{
  "manifest_version": 3,
  "name": "AI Text Detector",
  "version": "1.0",
  "description": "Highlights AI-generated text on Reddit.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"]
    }
  ]
}
