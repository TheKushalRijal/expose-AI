{
  "manifest_version": 3,
  "name": "Reddit AI Text Detector (DOM)",
  "version": "1.0",
  "description": "Annotates Reddit posts and comments with a heuristic score indicating likelihood of AI-generated text.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://www.reddit.com/*", "*://old.reddit.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reddit AI Text Detector"
  },
  "content_scripts": [
    {
      "matches": ["*://www.reddit.com/*", "*://old.reddit.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
